---
import MainLayout from "../layouts/MainLayout.astro";

const cartItems = [
  { id: 1, name: "Bujía", quantity: 2, price: 4.99 },
  { id: 2, name: "Amortiguador", quantity: 1, price: 49.99 },
];
const total = cartItems.reduce(
  (sum, item) => sum + item.price * item.quantity,
  0
);
---

<MainLayout>
  <section class="cart-section">
    <h1>Carrito de Compras</h1>
    <ul class="cart-items">
      {
        cartItems.map((item) => (
          <li class="cart-item">
            <span class="item-name">{item.name}</span>
            <span class="item-quantity">(x{item.quantity})</span>
            <span class="item-price">${item.price * item.quantity}</span>
          </li>
        ))
      }
    </ul>
    <p class="total">Total: ${total}</p>
    <button class="checkout-button">Pagar</button>
  </section>
</MainLayout>

<style>
  /* Estilos para la sección del carrito de compras */
  .cart-section {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .cart-section h1 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .cart-items {
    list-style: none;
    padding: 0;
  }

  .cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .item-name {
    font-weight: bold;
  }

  .item-quantity {
    color: #888;
  }

  .item-price {
    font-weight: bold;
  }

  .total {
    font-size: 1.2rem;
    font-weight: bold;
    margin-top: 1rem;
  }

  .checkout-button {
    padding: 0.75rem 1rem;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .checkout-button:hover {
    background-color: #555;
  }
</style>
